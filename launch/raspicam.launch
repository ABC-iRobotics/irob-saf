<!-- Launch file for left and right camera nodes using cv-camera -->

<launch>
	<group ns="ias"><group ns="stereo">

		<arg name="postfix" default="left"/> 
	
	
		<node type="raspicam_node" pkg="raspicam_node"
			name="raspicam_$(arg postfix)" output="screen">

    		<param name="camera_info_url" 
    		value="package://raspicam_node/camera_info/camerav1_1280x720.yaml"/>
    		<param name="width" value="1280"/>
    		<param name="height" value="720"/>
    		<!-- We are running at 90fps to reduce motion blur -->
    		<param name="framerate" value="30"/>
    		<param name="hFlip" value="true"/>
    		<param name="vFlip" value="true"/>

    		<param name="camera_frame_id" value="raspicam"/> 
    		
    		<remap from="/ias/stereo/raspicam_$(arg postfix)/camera_info" 
    			to="/ias/stereo/$(arg postfix)/raspicam/camera_info" />
    			
    		<remap from="/ias/stereo/raspicam_$(arg postfix)/image/compressed" 
    			to="/ias/stereo/$(arg postfix)/raspicam/image/compressed" />
    			
    		<remap 
    			from="/ias/stereo/raspicam_$(arg postfix)/parameter_descriptions" 
    			to="/ias/stereo/$(arg postfix)/raspicam/parameter_descriptions" />
    			
    		<remap 
    			from="/ias/stereo/raspicam_$(arg postfix)/parameter_updates" 
    			to="/ias/stereo/$(arg postfix)/raspicam/parameter_updates" />

		</node>
	
			
  	</group>
  	</group>
</launch>
